{
  "name": "sevima-hackaton",
  "private": true,
  "scripts": {
    "dev": "concurrently \"pnpm run dev:client\" \"pnpm run dev:server\" --names \"CLIENT,SERVER\" --prefix-colors \"cyan,yellow\"",
    "dev:client": "cd client && pnpm run dev",
    "dev:server": "cd server && pnpm run start",
    "dev:api": "cd server && nodemon app.js",
    "stop": "pm2 delete all",
    "build": "cd client && pnpm run build-only",
    "commit": "git-cz",
    "install:all": "pnpm i && cd client && pnpm install && cd ../server && pnpm install",
    "clean:all": "cd client && rm -rf node_modules package-lock.json && cd ../server && rm -rf node_modules package-lock.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jonfry1175/sevima-hackaton.git"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}
